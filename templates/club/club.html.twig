{% extends 'base.html.twig' %}

{% block title %}
    Club
            
        
    
{% endblock %}

{% block content %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Vos Club
                                                                            
                                                        
                                    
                </h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Logo
                                </th>
                                <th>
                                    Nom
                                </th>
                                <th>
                                    Telephone
                                </th>
                                <th>
                                    Adresse du Terrain
                                </th>
                                <th>
                                    Adresse du ClubHouse
                                </th>
                                <th>
                                    Code Postale
                                </th>
                                <th>
                                    Ville
                                </th>
                                <th>
                                    Entente
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                {% for club in clubs %}
                                    <td class="py-1">
                                        <img src="../../assets/images/faces-clipart/pic-1.png" alt="image"></td>
                                        <td>
                                            {{ club.nom }}
                                        </td>
                                        <td>
                                            {{ club.telephone }}
                                        </td>
                                        <td>
                                            Adresse Terrain
                                        </td>
                                        <td>
                                            {{ club.clubhouse }}
                                        </td>
                                        <td>
                                            {{ club.codepostale }}
                                        </td>
                                        <td>
                                            {{ club.ville }}
                                        </td>
                                        <td>
                                            {% if club.entente == true %} 
                                                <i class="mdi mdi-checkbox-blank-circle">
                                            {% else %}
                                                <i class="mdi mdi-checkbox-red-circle">
                                            {% endif %}
                                        </td>
                                    </td>
                                {% endfor %}
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
