{% extends 'base.html.twig' %}
{% block content %}
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">
					Striped Table
				</h4>
				<p class="card-description">
					Add class
					<code>
						.table-striped
					</code>
				</p>
				<div class="table-responsive">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>
									Photo
								</th>
								<th>
									Nom
								</th>
								<th>
									Téléphone
								</th>
								<th>
									Adresse
								</th>
								<th>
									Ville
								</th>
								<th>
									Code Postal
								</th>
								<th>
									Nom du Fondateur
								</th>
							</tr>
						</thead>
						<tbody>
							{% for club in clubs %}
								<tr {#onclick="myRedirect('{{ path('detail_club', {'id': club.id})}}')"#}>
									<td class="py-1">
									{% if club.images is not empty %}
										{% for image in club.images %}
											<img src="{{ asset('assets/images/' ~ image.photo) }}">
										{% endfor %}
									{% else %}
										<!-- Gérer le cas où il n'y a pas d'images -->
									{% endif %}
									</td>
									<td>
										{{ club.nom }}
									</td>
									<td>
										{{ club.telephone }}
									</td>
									<td>
										{{ club.clubhouse }}
									</td>
									<td>
										{{ club.ville }}
									</td>
									<td>
										{{ club.codepostale }}
									</td>
									<td>
										{{ club.fondateur.displayName|default('Fondateur inconnu') }}
									</td>
									<td>
										<button class="btn btn-outline-primary btn-rounded btn-fw">Demandez à Rejoindre</button>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	<script>
		function myRedirect(path) {
window.location.href = path;
}
	</script>
{% endblock %}
