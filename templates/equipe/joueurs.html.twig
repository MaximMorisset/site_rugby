{% extends 'base.html.twig' %}

{% block title %}
  Joueurs
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
  {% endblock %}

  {% block content %}
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
            Striped Table
          </h4>
          <p class="card-description">
            Add class 
            <code>
              .table-striped
            </code>
          </p>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>
                    Photo
                  </th>
                  <th>
                    Nom
                  </th>
                  <th>
                    Prenom
                  </th>
                  <th>
                    Date de Naissance
                  </th>
                  <th>
                    Poste(s) 
                  </th>
                </tr>
              </thead>
              <tbody>
                {% for joueur in joueurs %}
                <tr>
                  <td class="py-1">
                    <img src="../../assets/images/faces-clipart/pic-1.png" alt="image"></td>
                    <td> 
                        {{ joueur.nom }} 
                    </td>
                    <td>
                      {{ joueur.prenom }}
                    </td>
                    <td>
                      {{joueur.annee_naissance}}
                    </td>
                    <td>
                      joueur.postes
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    {% endblock %}
    