{% extends 'empty.html.twig' %}

{% block title %}
  Connexion
  
{% endblock %}

{% block body %}
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="row w-100 m-0">
        <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
          <div class="card col-lg-4 mx-auto">
            <div class="card-body px-5 py-5">
              <h3 class="card-title text-left mb-3">
                Connexion
                              
              </h3>
              <form method="post">
                {% if error %}
                  <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                  </div>
                {% endif %}

                {% if app.user %}
                  <div class="mb-3">
                    Tu est connecter avec cette Adresse Mail 
                                        
                    {{ app.user.userIdentifier }}
                    , 
                                        
                    <a href="{{ path('app_logout') }}">
                      Deconnexion
                                          
                    </a>
                  </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">
                  Connectez Vous
                                  
                </h1>
                <div class="vide">
                  <label for="inputEmail">
                    Email
                                    
                  </label>
                  <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></div>
                  <div class="vide">
                    <label for="inputPassword">
                      Mot de Passe
                                        
                    </label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required></div> 
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                      <div class="d-flex">
                        <button class="btn btn-primary btn-block enter-btn" type="submit a href=" {{ path('app_home') }} "">
                          Se Connecter
                        </button>
                      </div> 
                      <p class="sign-up">
                        Vous n'avez pas de compte?
                                                
                        <a href="{{ path('app_register') }}">
                          S'Inscrire
                                                  
                        </a>
                      </p>
                    </form>
                  </div>
                </div>
              </div>
            <!-- content-wrapper ends -->
            </div>
          <!-- row ends -->
          </div>
        <!-- page-body-wrapper ends -->
        </div>
      {% endblock %}
      