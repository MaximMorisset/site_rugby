{% extends 'base.html.twig' %}

{% block title %}Hello CreateClubController!{% endblock %}

{% block body %}
{{ form_errors(registrationForm) }}
<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="row w-100 m-0">
      <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
        <div class="card col-lg-4 mx-auto">
          <div class="card-body px-5 py-5">
            <h3 class="card-title text-left mb-3">
              Inscription
                            
            </h3>
              {{ form_start(registrationForm) }}
              <div class="vide">
                {{ form_row(registrationForm.nom, {'attr' : {'class':'form-control', }}
                ) }}
                                                          
                                
              </div>
              <div class="vide">
                {{ form_row(registrationForm.prenom, {'attr' : {'class':'form-control', }}
                ) }}
                                                        
                                
              </div>
              <div class="vide">
                {{ form_row(registrationForm.annee_naissance, {'attr': {'class': 'custom-date-input' }}
                ) }}
                                                        
                                
              </div>
              <div class="vide">
                {{ form_row(registrationForm.email, {'attr' : {'class':'form-control', }}
                ) }}
                                                        
                                
              </div>
              <div class="vide">
                {{ form_row(registrationForm.plainPassword, {'attr' : {'class':'form-control', }}
                ) }}

                <div class="vide">
                {{ form_row(registrationForm.roles, {'attr' : {'class':'form-control', }}
                ) }}
                                                        
                                
              </div>
              <div class="vide">
                {{ form_row(registrationForm.agreeTerms) }}
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block enter-btn">
                  S'Inscrire
                                    
                </button>
              </div>
              {{ form_end(registrationForm, {'attr' : {'class':'vide-droite', }}
              ) }}
                                                
                              
              <p class="sign-in">
                Vous avez deja un compte?
                                  
                <a href="{{ path('app_login') }}">
                  Connectez Vous
                                    
                </a>
              </p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
